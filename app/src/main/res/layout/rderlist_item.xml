<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:padding="3dp"
            android:gravity="center_vertical"
            android:text="订单号:"
            android:paddingLeft="5dp"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/order_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:padding="3dp"
            android:gravity="center_vertical"
            android:text="201705192212"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:padding="3dp"
            android:gravity="center"
            android:text="已完成"
            android:textSize="14sp"
            android:textColor="@color/black"/>
       <ImageView
           android:id="@+id/delete"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:padding="5dp"
           android:src="@drawable/order_delete"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/line">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/order_img"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            fresco:placeholderImage="@mipmap/order_default"
            fresco:placeholderImageScaleType="fitCenter"
            android:padding="5dp"
            fresco:roundedCornerRadius="10dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.5">
            <TextView
                android:id="@+id/tv_pro_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:text="盛大的家啊大家咯是你打算大苏打实打实的大大苏打实打实"
                />
            <TextView
                android:id="@+id/color"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="颜色:   白色"/>
            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="颜色:   白色"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.7"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/oneprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="x 129.00"
                android:textSize="12sp"
                android:paddingRight="10dp"
                android:gravity="right"/>

            <TextView
                android:id="@+id/num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="x 1"
                android:paddingRight="10dp"
                android:textSize="12sp"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_buy_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="共1件商品实付："
                android:textSize="16sp"
                android:gravity="right"
                android:padding="6dp"/>
            <TextView
                android:id="@+id/tv_buy_totailprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="¥ 60.00"
                android:padding="6dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/gainsboro"/>
        <RelativeLayout
            android:id="@+id/buy_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible"
            >
            <TextView
                android:id="@+id/buy_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价晒单"
                android:padding="6dp"
                android:layout_toLeftOf="@+id/buy_again"
                android:layout_marginRight="10dp"
                android:background="@drawable/orderitem_bg"/>
            <TextView
                android:id="@+id/buy_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="再次购买"
                android:padding="6dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/red"
                android:background="@drawable/orderitem_bg"
                />
            <TextView
                android:id="@+id/remove_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消订单"
                android:padding="6dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/orderitem_bg"
                />
            <TextView
                android:id="@+id/isGet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认收货"
                android:padding="6dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/orderitem_bg"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>