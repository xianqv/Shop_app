<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.administrator.igoushop_app.widget.CustomToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        app:navigationIcon="@drawable/icon_back"
        app:title="账号安全"
        />
    <com.example.administrator.igoushop_app.widget.UserDefineScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:background="#fafafa">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fafafa"
            android:layout_marginTop="15dp">

            <com.example.administrator.igoushop_app.widget.SecondItemChiose
                android:id="@+id/change_pwd"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:item_title="修改密码"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="#dedbdb"/>
            <com.example.administrator.igoushop_app.widget.SecondItemChiose
                android:id="@+id/change_phone_number"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:item_title="修改手机号"
                app:item_msg="13624832505"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="#dedbdb"/>

        </LinearLayout>
        </com.example.administrator.igoushop_app.widget.UserDefineScrollView>

</LinearLayout>