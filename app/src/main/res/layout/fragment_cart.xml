<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.example.administrator.igoushop_app_test.widget.CustomToolBar
        android:id="@+id/CartToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        app:rightButtonText=""
        app:title="购物车"
        >
    </com.example.administrator.igoushop_app_test.widget.CustomToolBar>
    <!-- listview，购物车里面的东西有可能比较多，需要用listview来进行显示 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cart_shopping_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0.5dp"
            android:visibility="visible">
        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/NoWaresImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/cart_img"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/hintText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车还是空的"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/hintText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去挑几件中意的商品吧"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#cac9c9"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/CkeckLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#fffefe"
        android:visibility="visible">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:text="总价"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:text="¥ 0"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingRight="40dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/jiesuan_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/pay_button_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="结算"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#cac9c9"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout >